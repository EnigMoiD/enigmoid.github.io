@import url('http://fonts.googleapis.com/css?family=Jura:300');
@import url('http://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100');

// Fonts
@font-face
  font-family Entypo
  src url('/font/Entypo/entypo.eot')
  src url('/font/Entypo/entypo.eot?#iefix') format('embedded-opentype'),
	  url('/font/Entypo/entypo.woff') format('woff'),
	  url('/font/Entypo/entypo.ttf') format('truetype'),
	  url('/font/Entypo/entypo.svg') format('svg')
  font-weight normal
  font-style normal

@font-face
  font-family Entypo-Social
  src url('/font/Entypo-Social/entypo-social.eot')
  src url('/font/Entypo-Social/entypo-social.eot?#iefix') format('embedded-opentype'),
	  url('/font/Entypo-Social/entypo-social.woff') format('woff'),
	  url('/font/Entypo-Social/entypo-social.ttf') format('truetype'),
	  url('/font/Entypo-Social/entypo-social.svg') format('svg')
  font-weight normal
  font-style normal

.e
	display inline-block
	font-family 'Entypo'
	font-size 2em
	font-style normal
	font-weight normal
	line-height 1em
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.e.code:before
	content '\E714'

.e.user:before
	content '\1F464'

.e.envelope:before
	content '\2709'

.e.bolt:before
	content '\26A1'

.e-s
	display inline-block
	font-family 'Entypo-Social'
	font-size 2em
	font-style normal
	font-weight normal
	line-height 1em
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.e-s.github:before
	content '\F300'

// Mixins
a-color(color, hover, active)
	a
		text-decoration none
		color color
		&:visited
			color color
		&:hover
			color hover
		&:active
			color active

transform()
	transform arguments
	-webkit-transform arguments
	-moz-transform arguments
	-ms-transform arguments

// Animation
quickly = 100ms
slowly = 500ms

// Colors
dark-blue = rgb(32, 43, 48)
dark-gray = rgb(78, 113, 120)
bright-blue = rgb(79, 169, 184)
light-blue = rgb(116, 192, 207)
off-white = rgb(241, 247, 226)

text-color = off-white
bg-color = dark-blue

// Includes

.project-snippet
	text-shadow 0px -1px rgba(0, 0, 0, .2)
	background-color dark-blue

	padding .1em 0px .2em .5em

	.desc-item
		padding-right 1em

.project-snippet-even
	background-color lighten(dark-blue, 10%)

// Modifiers

// Global config

a
	text-decoration none

body
	background-color bg-color

div, body, header, h1, img, ul, li, h1, div
	padding 0px
	margin 0px

	font-family 'Alegreya Sans SC'
	color text-color

header
	font-family 'Jura'

p line-height line-height

// Global Layout

header
	display block
	padding-left 0px 2em
	background-color dark-gray

	a-color(rgba(text-color, 70%), text-color, darken(text-color, 40%))

	li
		font-size 1.5em
		padding 0px 1em
		text-align center
		display inline-block
		text-shadow 0px -1px rgba(0, 0, 0, .2)

	li.active
		a
			color text-color
		background-color bright-blue

ul#left-items
	display inline

ul#right-items
	float right

div.container
	overflow hidden
	background-color bg-color

p
	line-height line-height

// Projects

span.project
	display block