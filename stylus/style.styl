@font-face
	font-family 'Olin'
	src url('/font/olin/olin-webfont.eot')
	src url('/font/olin/olin-webfont.eot?#iefix') format('embedded-opentype'), url('/font/olin/olin-webfont.woff') format('woff'), url('/font/olin/olin-webfont.ttf') format('truetype')
	font-weight normal
	font-style normal

.olin:before
	display inline-block
	font-family Olin
	content 'l'
	font-size 2em
	font-style normal
	font-weight normal
	line-height .35
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

/*
// Good call by d3vron:
// gist.github.com/d3vron/1080346
*/
vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

a-color(color, hover, active)
	a
		text-decoration none
		color color
		&:visited
			color color
		&:hover
			color hover
		&:active
			color active

transition()
	vendor('transition', arguments)

quickly = 200ms

// Colors
dark-gray = #14151A
dark-dark-gray = darken(dark-gray, 40%)
accent = #1194CE

dim-blue = desaturate(darken(accent, 70%), 85%)
off-white = desaturate(lighten(accent, 95%), 50%)

dim-text = desaturate(lighten(dim-blue, 30%), 30%)

text-color = off-white
bg-color = dark-dark-gray
inset-color = darken(dark-dark-gray, 10%)
footer-color = accent

// Media variables

// Sizes

header-padding = 0px
accent-size = 3em
footer-height = 120px

// Global config

a-color(rgba(text-color, 80%), text-color, darken(text-color, 50%))

html
	height 100%
	width 100%

body
	background-color bg-color
	font-family 'Open Sans'
	color text-color

	height 100%

// Rudimentary global reset
*
	padding 0px
	margin 0px

h1, h2, h3, h4, h5, h6
	font-family 'Alegreya Sans SC'

img
	max-width 100%

ul
	list-style none
	
// Includes

snippet-padding = .1em 0px .2em .5em

.snippet
	font-family 'Alegreya Sans SC'
	text-shadow 0px -1px rgba(0, 0, 0, .2)

	background-color dark-gray
	padding snippet-padding

	h1
		display inline

	.desc-item
		padding-right 1em

	.external-pin
		float right
		font-size 1.5em

.snippet.even
	background-color lighten(dark-gray, 5%)

// Modifiers
.center
	text-align center

.accent
	text-shadow none
	color accent
	font-size accent-size

// Experience
.experience.snippet
	position relative
	height 100%
	display inline-block


	&:first-child
		margin-left 0px

	padding 0px

	vertical-align top

	top 100px

	.inner
		padding snippet-padding

	transition width quickly

	background-color lighten(dark-gray, 5%)

.experience.snippet.even
	background-color lighten(dark-gray, 10%)

// Global Layout

// Header

header
	padding header-padding 0px
	background-color dim-blue

	a-color(rgba(text-color, 70%), text-color, darken(text-color, 40%))

	li
		white-space nowrap
		padding header-padding

		font-family 'Jura'
		font-size 1.5em
		text-align center
		text-shadow 0px -1px rgba(0, 0, 0, .2)

		@media(min-width: 380px)
			padding header-padding 1em
			display inline

	li.active
		a
			color text-color
		background-color accent

ul#left-items
	margin auto
	display inline

ul#right-items
	float right

// Columns
.column-container
	width 100%
	display table

div.column
	display table-cell
	width 1%
	position relative

	@media (max-width: 700px)
		display block
		width 100%

// Banner (for putting a background behind content)

.banner
	text-align center
	padding 1em 0

	img
		width 100%
		height auto !important

.banner-content
	text-shadow 0px 1px 3px dim-blue, 0px 1px 3px dim-blue, 0px 1px 3px dim-blue
	width 100%
	position absolute
	z-index 1

.banner-bg
	width 100%

// About banners
about-height = 5em

.about.banner
	height about-height

.about.banner-content
	font-size 1.1em

.about.banner-bg
	i
		font-size about-height
		color rgba(0, 0, 0, 0)
		text-shadow 0px 1px 3px dim-blue, 0px 1px 5px dim-blue, 0px 1px 9px dim-blue, 0px 1px 13px dim-blue, 0px 1px 19px dim-blue

// Category columns

.category.column.one
	background-color lighten(dark-dark-gray, 3%)

.category.column.two
	background-color lighten(dark-dark-gray, 2%)

.category.column.three
	background-color lighten(dark-dark-gray, 1%)

.type
	h2
		transition color quickly
		&:hover
			color accent !important
	.values
		background-color dark-dark-gray

// Index banners

.index-banner
	width 100%
	h1
		font-size 2em
		background-color dark-dark-gray
		text-align center
	img
		width 100%
		height auto !important

// Post banners

.post.banner
	overflow hidden
	position relative

.post.banner-content
	transition opacity quickly
	@media(min-width: 700px)
		top 50%
		height 3em
		margin-top -1.5em

// Universal and Content Containers

#container
	background-color dark-gray

	clear both
	height auto
	min-height 100%
	padding-bottom footer-height

	margin auto
	max-width 900px

#post-container
	@extends #container
	padding 0 1em

	ul, ol
		padding 0 1em

#content-container
	padding 0 1em

// Footer

footer
	clear both
	width 100%
	display table
	position relative
	z-index 2
	height footer-height
	margin-top - footer-height

	#content
		display table-cell
		vertical-align middle
		font-size 0.8em

		text-align center
		text-shadow 0px 1px rgba(0, 0, 0, .2)
		a
			border-bottom 1px dotted text-color
			text-decoration none
			&:hover
				border-bottom 1px solid text-color
			&:active
				color text-color

	background-color footer-color

// About

.milestone
	text-align center
	.number
		@extends .accent

// Post-specific stuff

.box
	background-color inset-color
	padding 1em
	clear both
	position relative

.box.project-specs
	.specs-image
		@media(min-width: 600px)
			float right
			display inline-block
			margin none

		height 180px
		width auto

		display block
		margin-left auto
		margin-right auto

	.specs-content
		@media(min-width: 600px)
			display inline-block
			vertical-align top
			min-height 180px
			text-align left
		text-align center

.image-box
	@extends .box
	margin .5em
	img
		width 100%

	.caption
		text-align center

.image-box.center
	width 80%
	margin-left auto
	margin-right auto

.images-box
	clear both
	position relative
	width 100%
	img
		margin 0px
		float left

// Pygments stuff

