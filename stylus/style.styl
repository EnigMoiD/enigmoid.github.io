@import url('http://fonts.googleapis.com/css?family=Jura:300');
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300');
@import url('http://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100');

// Mixins
a-color(color, hover, active)
	a
		text-decoration none
		color color
		&:visited
			color color
		&:hover
			color hover
		&:active
			color active

// Colors
dark-gray = #14151A
accent = #1194CE

dim-blue = desaturate(darken(accent, 70%), 85%)
off-white = desaturate(lighten(accent, 95%), 50%)

text-color = off-white
bg-color = dark-gray

// Global config

a
	text-decoration none

a-color(rgba(text-color, 80%), text-color, darken(text-color, 50%))

body
	background-color bg-color
	font-family 'Open Sans'

div, body, header, h1, h2, h3, h4, h5, h6, img, ul, li, div
	padding 0px
	margin 0px

	color text-color

h1, h2, h3, h4, h5, h6
	font-family 'Alegreya Sans SC'

img
	max-width 100%

ul
	list-style none

#container
	clear both
	
// Includes
	
.project-snippet
	font-family 'Alegreya Sans SC'
	text-shadow 0px -1px rgba(0, 0, 0, .2)

	background-color dim-blue
	padding .1em 0px .2em .5em

	h1
		display inline-block

	.desc-item
		padding-right 1em

	.external-pin
		float right
		font-size 1.5em

.project-snippet-odd
	background-color lighten(dim-blue, 10%)

// Modifiers
.center
	text-align center

// Global Layout

header-padding = 1px

header
	padding header-padding 0px
	background-color dim-blue

	a-color(rgba(text-color, 70%), text-color, darken(text-color, 40%))

	li
		padding header-padding 1em

		font-family 'Jura'
		font-size 1.5em
		text-align center
		display inline
		text-shadow 0px -1px rgba(0, 0, 0, .2)

	li.active
		a
			color text-color
		background-color accent

ul#left-items
	display inline-table

ul#right-items
	float right

footer
	clear both
	position relative
	z-index 2
	height 3em
	margin-top -3em

	font-size 0.8em
	text-align center
	background-color dim-blue

// Posts
#post-container
	clear both
	padding 0 1em

#post-banner
	clear both
	width 100%
	display table
	h1
		display table-cell
		vertical-align middle
	font-family 'Alegreya Sans SC'
	text-align center

	background-position 50% 50%
	background-color darken(dim-blue, 30%)
	text-shadow 0px 1px 3px dim-blue,
				0px 1px 3px dim-blue,
				0px 1px 3px dim-blue
	height 10em


// Projects

span.project
	display block