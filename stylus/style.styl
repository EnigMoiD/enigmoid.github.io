@font-face
	font-family 'Olin'
	src url('/font/olin/olin-webfont.eot')
	src url('/font/olin/olin-webfont.eot?#iefix') format('embedded-opentype'), url('/font/olin/olin-webfont.woff') format('woff'), url('/font/olin/olin-webfont.ttf') format('truetype')
	font-weight normal
	font-style normal

.olin:before
	display inline-block
	font-family Olin
	content 'l'
	font-size 2em
	font-style normal
	font-weight normal
	line-height .35
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

// gist.github.com/d3vron/1080346
vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

a-color(color, hover, active)
	a
		text-decoration none
		color color
		&:visited
			color color
		&:hover
			color hover
		&:active
			color active

transition()
	vendor('transition', arguments)

snippet(size)
	font-family font-text
	text-shadow snippet-text-shadow

	background-color snippet-color
	padding snippet-padding

	h1, h2
		font-family font-big-header
		display inline
		text-shadow snippet-text-shadow

	h1
		font-size size * 1.2em
	h2
		// font-variant normal
		font-size size * .8em
		transition color quickly

proj-snip(size)
	snippet(size)
	position relative
	overflow hidden

	width 100%

	height size*size * 3em
	padding 0px

	.post-bg
		position relative
		width 100%
		padding 0px
		.post-banner
			width 100%

		.post-bg-overlay
			position absolute
			width 100%
			height 100%
			background linear-gradient(rgba(0, 0, 0, .6),transparent)

		.post-banner-color
			position absolute
			width 100%

			opacity 0

	.project.banner-content
		padding-left .3em
		text-shadow none
		h1, h2
			transition font-size quickly
		transition background-color quickly

		.post-header
			color text-color

		.proj-content
			font-family font-text

			height 0px
			overflow hidden
			padding snippet-padding

		&.active
			h1
				font-size 2em
			h2
				font-size 1.5em

	h1
		vertical-align middle

	.date
		vertical-align middle
		display inline
		padding-left .6em
		white-space nowrap

	.desc-container
		.desc-item
			white-space nowrap
			padding-right 1em

	.pin-container
		padding .3em.3em 0px 0px
		.external-pin
			float right
			font-size 1.4em

quickly = 200ms

// Colors

dark-gray = #14151A
dark-dark-gray = darken(dark-gray, 40%)
accent = #1194CE

dim-blue = desaturate(darken(accent, 70%), 85%)
off-white = desaturate(lighten(accent, 95%), 50%)

dim-text = desaturate(lighten(dim-blue, 30%), 30%)

// Site Colors

text-color = off-white
body-bg-color = dark-dark-gray
inset-color = darken(dark-dark-gray, 10%)
header-color = dim-blue
footer-color = accent
container-color = dark-gray
snippet-color = dark-gray

// Styles
snippet-text-shadow = 0px 1px rgba(0, 0, 0, .6)

font-text = 'Open Sans'
font-header = 'Exo 2'
font-big-header = 'Open Sans'

// Sizes

header-padding = 0px
accent-size = 3em
footer-height = 120px

about-height = 5em

snippet-padding = .1em .2em .2em .5em

// Global config

a-color(rgba(text-color, 80%), text-color, darken(text-color, 50%))

html
	height 100%
	width 100%

body
	background-color body-bg-color
	font-family font-text
	font-weight 300
	color text-color

	height 100%

.hidden
	display none !important

*
	padding 0px
	margin 0px

h1, h2
	font-family font-big-header
	font-weight 300
	font-variant small-caps

h3, h4, h5, h6
	font-family font-header

img
	max-width 100%

ul
	list-style none

// Includes

.snippet
	snippet(1)

.project.snippet.imp0
	proj-snip(1.5)

.project.snippet.imp1
	proj-snip(1.1)

// Modifiers
.center
	text-align center

.accent
	text-shadow none
	color accent
	font-size accent-size
	font-weight 300

// GLOBAL

// Header

header
	padding header-padding 0px
	background-color header-color

	a-color(rgba(text-color, 70%), text-color, darken(text-color, 40%))

	li
		padding header-padding

		font-family font-header
		font-size 1.4em
		text-align center
		text-shadow 0px -1px rgba(0, 0, 0, .2)

		@media (min-width: 560px)
			padding header-padding 1em
			display inline

	li.active
		a
			color text-color
		background-color accent

// Global containers

#container
	overflow hidden
	position relative
	background-color container-color

	min-height 100%
	padding-bottom footer-height

	margin auto
	max-width 900px

#content-container
	padding 0 1em

// Footer

footer
	clear both
	width 100%
	display table
	position relative
	z-index 2
	height footer-height
	margin-top - footer-height

	#content
		.contact
			line-height 3em
			div
				display inline
				padding 0px .3em
		display table-cell
		vertical-align middle
		font-size 0.8em

		text-align center
		text-shadow 0px 1px rgba(0, 0, 0, .2)
		a
			border-bottom 1px dotted text-color
			text-decoration none
			&:hover
				border-bottom 1px solid text-color
			&:active
				color text-color

	background-color footer-color

// Columns

.column-container
	width 100%
	display table

.column
	display table-cell
	width 1%
	position relative

	@media  (max-width: 700px)
		display block
		width 100%

// Banner

.banner
	text-align center
	padding 1em 0

	img
		width 100%
		height auto !important

.banner-content
	text-shadow 0px 1px 3px dim-blue, 0px 1px 3px dim-blue, 0px 1px 3px dim-blue
	width 100%
	position absolute
	z-index 1

.banner-bg
	width 100%

// Home banners

.about.banner
	height about-height

.about.banner-content
	font-size 1.1em

.about.banner-bg
	i
		font-size about-height
		color rgba(0, 0, 0, 0)
		text-shadow 0px 1px 3px dim-blue, 0px 1px 5px dim-blue, 0px 1px 9px dim-blue, 0px 1px 13px dim-blue, 0px 1px 19px dim-blue

// Index banners

.index-banner
	width 100%
	h1
		font-size 2em
		background-color dark-dark-gray
		text-align center
	img
		width 100%
		height auto !important

// Post banners

.post.banner
	overflow hidden
	position relative

.post.banner-content
	transition opacity quickly
	@media (min-width: 700px)
		top 50%
		height 3em
		margin-top -1.5em

// HOME

.greeting-container
	padding 0px
	margin 0 -1em
	.greeting-content
		padding-left .7em
		z-index 1
		position absolute
		bottom 0px
		text-align center
		.greeting-name
			font-size 4em
			font-family 'Lato'
			@extends .accent

		.greeting-header
			font-family font-header
			font-size 1.2em

.milestone
	text-align center
	.number
		font-family 'Lato'
		@extends .accent

// SKILLS

.category.one
	background-color lighten(dark-dark-gray, 8%)

.category.two
	background-color lighten(dark-dark-gray, 4%)

.category.three
	background-color lighten(dark-dark-gray, 1%)

.skill
	transition background-color quickly
	&:hover
		background-color darken(accent, 20%) !important
	.values
		background-color darken(accent, 20%)
		.example
			transition background-color quickly
			&:hover
				background-color accent

// EXPERIENCE
#exp-container
	width 90%
	display inline-block
	overflow hidden

.experience
	text-shadow snippet-text-shadow
	position absolute
	padding 0px

	transition background-color quickly

	.textbox
		padding snippet-padding
		position relative
		background-color inherit
		z-index 6

		h1, h2, a
			display inline
			width 100%
			padding-right .5em
			background-color inherit
			@media (min-width: 400px)
				white-space nowrap

	.exp-content
		font-family font-text

		height 0px
		overflow hidden
		transition height quickly

	&:hover
		background-color darken(accent, 20%) !important

	&.selected
		padding 0px 1em

	&.one
		background-color lighten(dark-dark-gray, 20%)
		&.selected:hover
				background-color lighten(dark-dark-gray, 20%) !important
	&.two
		background-color lighten(dark-dark-gray, 15%)
		&.selected:hover
				background-color lighten(dark-dark-gray, 15%) !important
	&.three
		background-color lighten(dark-dark-gray, 10%)
		&.selected:hover
				background-color lighten(dark-dark-gray, 10%) !important

.track
	vertical-align top
	position relative
	display inline-block

	transition width quickly

	height 100%
	background-color container-color

.track.selected
	z-index 100 !important

#time-container
	float right
	width 10%
	display inline-block

	div
		width 100%
		position absolute

	.month
		font-family font-big-header
		color lighten(container-color, 20%)
		border-top 1px solid lighten(container-color, 30%)

	.year
		color lighten(container-color, 50%)

// Project posts

#post-container
	@extends #container
	padding 0 1em

	ul, ol
		padding 0 1em

.project-specs
	position relative
	.specs-image
		@media (min-width: 600px)
			position absolute
			top 1em
			right 1em
			display inline-block

		height 180px
		width auto

		display block
		margin-left auto
		margin-right auto

	.specs-content
		@media (min-width: 600px)
			display inline-block
			vertical-align top
			min-height 180px
			text-align left
		text-align center

.box
	background-color inset-color
	margin .5em
	padding 1em
	clear both
	position relative

.image-box
	@extends .box
	img
		width 100%

	.caption
		text-align center

.image-box.center
	width 80%
	margin-left auto
	margin-right auto

// LIDAR

.images-box
	clear both
	position relative
	width 100%
	img
		margin 0px
		float left

// Pygments

.highlight
	margin .5em
	overflow scroll
	background-color dark-dark-gray

	.lineno
		color dim-text
		background-color dim-blue
		padding 0 .7em

