// Post banners



// Content Container

#container
	background-color dark-gray

	clear both
	height auto
	min-height 100%
	padding-bottom footer-height

	margin auto

	p
		padding 0px 1em

#post-container
	@extends #container
	padding 0 1em

// Footer

footer
	clear both
	width 100%
	display table
	position relative
	z-index 2
	height footer-height
	margin-top - footer-height

	#content
		display table-cell
		vertical-align middle
		font-size 0.8em

		text-align center
		text-shadow 0px 1px rgba(0, 0, 0, .2)
		a
			border-bottom 1px dotted text-color
			text-decoration none
			&:hover
				border-bottom 1px solid text-color
			&:active
				color text-color

	background-color footer-color

// About

.milestone
	text-align center
	.number
		@extends .accent

// Posts

.banana
	clear both
	width 100%
	display table
	h1
		display table-cell
		vertical-align middle
	font-family 'Alegreya Sans SC'
	text-align center

	background-color darken(dim-blue, 30%)
	text-shadow 0px 1px 3px dim-blue,
				0px 1px 3px dim-blue,
				0px 1px 3px dim-blue