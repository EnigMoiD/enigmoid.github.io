@import url('http://fonts.googleapis.com/css?family=Jura:300');
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300');
@import url('http://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100');

// Mixins
a-color(color, hover, active)
	a
		text-decoration none
		color color
		&:visited
			color color
		&:hover
			color hover
		&:active
			color active

// Colors
dark-blue = rgb(32, 43, 48)
dark-dark-blue = darken(dark-blue, 50%)
dark-gray = rgb(78, 113, 120)
bright-blue = rgb(79, 169, 184)
light-blue = rgb(116, 192, 207)
off-white = rgb(241, 247, 226)

text-color = off-white
bg-color = dark-blue

// Global config

a
	text-decoration none

a-color(rgba(text-color, 70%), text-color, darken(text-color, 40%))

body
	background-color bg-color
	font-family 'Open Sans'

div, body, header, h1, h2, h3, h4, h5, h6, img, ul, li, div
	padding 0px
	margin 0px

	color text-color

h1, h2, h3, h4, h5, h6
	font-family 'Alegreya Sans SC'

img
	max-width 100%

ul
	list-style none

#container
	clear both
	
// Includes
	
.project-snippet
	font-family 'Alegreya Sans SC'
	text-shadow 0px -1px rgba(0, 0, 0, .2)

	background-color dark-blue
	padding .1em 0px .2em .5em

	h1
		display inline-block

	.desc-item
		padding-right 1em

	.external-pin
		float right
		font-size 1.5em

.project-snippet-even
	background-color lighten(dark-blue, 10%)

// Modifiers
.center
	text-align center

// Global Layout

header-padding = 1px

header
	padding header-padding 0px
	background-color dark-gray

	a-color(rgba(text-color, 70%), text-color, darken(text-color, 40%))

	li
		padding header-padding 1em

		font-family 'Jura'
		font-size 1.5em
		text-align center
		display inline
		text-shadow 0px -1px rgba(0, 0, 0, .2)

	li.active
		a
			color text-color
		background-color bright-blue

ul#left-items
	display inline-table

ul#right-items
	float right

// Posts
#post-container
	clear both
	padding 0 1em

#post-banner
	clear both
	width 100%
	display table
	h1
		display table-cell
		vertical-align middle
	font-family 'Alegreya Sans SC'
	text-align center

	background-position 50% 50%
	background-color darken(dark-blue, 30%)
	text-shadow 0px 1px 3px dark-dark-blue,
				0px 1px 3px dark-dark-blue,
				0px 1px 3px dark-dark-blue
	height 10em


// Projects

span.project
	display block